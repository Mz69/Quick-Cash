<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PastJobs"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/loadjobBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/loadJob"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Load jobs" />
    </LinearLayout>

    <LinearLayout
    android:id="@+id/JobTitleBox"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/JobTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Job Title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/JobPayBox"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/JobPayTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PAY" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/JobDurationBox"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/JobDurationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DURATION" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/UrgencyBox"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/UrgencyTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="URGENCY" />
    </LinearLayout>

    <Button
        android:id="@+id/PayForJob"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="Payment" />
</LinearLayout>